{
  "name": "playground",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.22",
      "golangciLintVersion": "1.57.2"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/java:1.6.0": {
      "version": "21.0.4",
      "installMaven": "false",
      "installGradle": "true"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": ["golang.go", "eamodio.gitlens", "esbenp.prettier-vscode"]
    }
  },
  "containerEnv": {
    "CGO_ENABLED": "0",
    "GODEBUG": "asyncpreemptoff=1"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/go/bin",
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "LOCAL_USER_PATH": "${localEnv:HOME}${localEnv:USERPROFILE}"
  },
  "postStartCommand": {},
  "postCreateCommand": {},
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh,readonly",
    "type=bind,source=${localEnv:HOME}/go/pkg/mod,target=/go/pkg/mod,consistency=cached"
  ],
  "remoteUser": "root",
  "runArgs": ["--name=playground-workspace"]
}
